
.container {
  background-color: #eee;
  height:100vh;
} 

.user_info {
  background-color: #fff;
  margin-bottom:20rpx;
  display: flex;
  flex-flow: column nowrap;
}
.user_info_bottom view{
  width:100%;
  height:100rpx;
  font-size:28rpx;
  display: flex;
  align-items: center;
}
.user_info_bottom view .left {
  width:110rpx;
  padding:40rpx;
  box-sizing: border-box;
}
.user_info_bottom view .left image {
  width:30rpx;
  height:30rpx;
}

.user_info_bottom view .right {
  border-bottom:0.5rpx solid #eee;
  display: flex;
  justify-content: space-between;
}
.user_info_bottom view .right text {
  margin-right:20rpx;
}