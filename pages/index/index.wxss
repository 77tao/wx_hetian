/**index.wxss**/
.nav{
  height:350rpx;
}
.nav swiper {
  height:350rpx;
}

.nav swiper image{
  width:100%;
  height:350rpx;
}
.couse_title {
  margin-top:20rpx;
  display: flex;
  justify-content: center;
}

.course_list {
  display: flex;
  justify-content: space-between;
  padding:20rpx 20rpx 0 20rpx;
  flex-flow: row wrap;
}

.course_box {
  border:2rpx solid #eee;
  width:48%;
  margin:0 0.5% 2% 0.5%;
}
.course_box .course_image {
  width:100%;
  height:200rpx;
}
.course_box .course_image image{
  width:100%;
  height:200rpx;
}
.course_box .course_info {
  display: flex;
  justify-content: space-between;
  font-size:24rpx;
  padding:5rpx 10rpx;
  align-items: center;
}
.course_info .title{
  font-size:28rpx; 
  width:60%;
  height:40rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box; 
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical; 
  word-break: break-all;
}
.course_info image {
  width:20rpx;
  height:20rpx;
  margin-right:5rpx;
}