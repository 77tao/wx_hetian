.course_list {
  display: flex;
  justify-content: space-between;
  padding:20rpx 20rpx 0 20rpx;
  flex-flow: row wrap;
}
.search {
  background-color:#eee;
  height:80rpx;
  padding:15rpx 30rpx;
  box-sizing: border-box;
  font-size:24rpx;
}
.search input {
  background-color:#fff;
  padding-left:20rpx;
  border-radius:10rpx;
  height:50rpx;
}
.course_box {
  border:2rpx solid #eee;
  width:48%;
  margin:0 0.5% 2% 0.5%;
}
.course_box .course_image {
  width:100%;
  height:200rpx;
}
.course_box .course_image image{
  width:100%;
  height:200rpx;
}
.course_box .course_info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size:24rpx;
  padding:5rpx 10rpx;
}
.course_info .title{
  font-size:28rpx; 
  width:60%;
  height:40rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box; 
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical; 
  word-break: break-all;
}
.course_info image {
  width:20rpx;
  height:20rpx;
  margin-right:5rpx;
}